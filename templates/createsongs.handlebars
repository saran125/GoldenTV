<style>

body {
  background-color: black;
}

div.blackblock {
  background-color: black;
  width: 800px;
  height: 358px;
}

.btn#query {
  background-color: black;
  color: gold;
  border: 1px solid white;
}

.btn#query:hover {
  background-color: grey;
  color: white;
}
</style>

<h1 class="display-4">Create Songs</h1>

<form method="POST" action="" name="" enctype="multipart/form-data">
  
  <div class="form-group">
  <h5>Song Image</h5>
  <input type="file" id="songimage" 
  onchange="document.getElementById('imagedisplay').src = window.URL.createObjectURL(this.files[0])" 
  name="songimage" value="{{songimage}}" required>
  </div>

  <img id="imagedisplay" src="/public/img/No-Image-PlaceHolder.png" 
  alt="" class="border img-thumbnail img-fluid"
  style="width: 110px; height: 160px; padding-bottom: 5px;">

  <div class="form-group">
  <h5>Song Name</h5>
  <input type="songname" name="songname" class="form-control" value="{{songname}}" required>
  </div>

  <div class="form-group">
  <h5>Song Age Rating</h5>
  <input type="songagerating" name="songagerating" class="form-control" value="{{songagerating}}" required>
  </div>

  <div class="form-group">
  <h5>Song Duration</h5>
  <input type="songduration" name="songduration" class="form-control" value="{{songduration}}" required>
  </div>

  <div class="form-group">
    <h5>Song Genres</h5>
	<input type="checkbox" name="songPop" value="false">
	<label class="form-check-label" for="Pop">Pop</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songRock" value="false">
	<label class="form-check-label" for="Rock">Rock</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songMetal" value="false">
	<label class="form-check-label" for="Metal">Metal</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songCountry" value="false">
	<label class="form-check-label" for="Country">Country</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songRap" value="false">
	<label class="form-check-label" for="Rap">Rap</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songElectronic" value="false">
	<label class="form-check-label" for="Electronic">Electronic</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songJazz" value="false">
	<label class="form-check-label" for="Jazz">Jazz</label>
	<div class="blackbox"></div>
	<input type="checkbox" name="songFolk" value="false">
	<label class="form-check-label" for="Folk">Folk</label>
	<div class="blackbox"></div>
  </div>

  <div class="submit">
    <input class="btn" id="query" type="submit">
  </div>

</form>