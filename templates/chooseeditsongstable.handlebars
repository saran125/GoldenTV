<h1>Song Data Table</h1>
<table
    id = "id"
    data-show-export="true"
 	data-toggle="table"
    data-search="true"
    data-pagination="true"
    data-total-field="total"
    data-data-field="rows"
    data-show-columns-toggle-all="true"
	data-side-pagination="server"
    data-sort-name="dateCreated"
    data-height="600"
    data-silent-sort="false"
    data-server-sort="true"
    data-search="true"
    {{!-- data-page-number="50" --}}
    data-pagination="true"
    {{!-- data-page-size="5" --}}
    data-page-list="[10, 25, 50, 100, 200, All]"
    data-show-refresh="true"
    data-show-columns="true"
    data-show-columns-search="true"
    data-addrbar="true"
	data-url="/prod/chooseeditsongstable-data"
    >
	<thead>
		<tr>
            <th data-field="dateCreated" data-sortable="true">Song Creation Date</th>
            <th data-field="dateUpdated" data-sortable="true">Song Update Date</th>
            <th 
            {{!-- data-field="movieimage" --}}
            data-formatter="table_row_image"
            >Movie Poster</th>
            <th data-field="songname" data-sortable="true">Song Name</th>
            <th data-field="songagerating" data-sortable="true">Song Age Rating</th>
            <th data-field="songduration" data-sortable="true">Song Duration</th>
            <th data-formatter="table_row_genres" data-sortable="true">Song Genre(s)</th>
            <th data-formatter="table_row_edit" >Song Edit?</th>
		</tr>
	</thead>
</table>

<script>

	function table_row_image(value, row, index) {
		return `
		<img src="/public/uploads/${row.songimage}" 
        style="width: 110px; height: 160px; padding-bottom: 5px;"
        alt="Norway" class="w3-hover-opacity">
		`;
	}
    function table_row_genres(value, row, index) { 
        var checkPop = row.songPop;
        var checkCountry = row.songCountry;
        var checkRock = row.songRock;
        var checkMetal = row.songMetal;
        var checkRap = row.songRap;
        var checkElectronic = row.songElectronic;
        var checkJazz = row.songJazz;
        var checkFolk = row.songFolk;
        if (checkPop == 1) {
           checkPop = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Pop" + `</div>`;
        }
        else {checkPop = ""}
        if (checkCountry == 1) {
           checkCountry = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Country" + `</div>`;
        }
        else {checkCountry = ""}
        if (checkRock == 1) {
           checkRock = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Rock" + `</div>`;
        }
        else {checkRock = ""}
        if (checkMetal == 1) {
           checkMetal = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Metal" + `</div>`;
        }
        else {checkMetal = ""}
        if (checkRap == 1) {
           checkRap = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Rap" + `</div>`;
        }
        else {checkRap = ""}
        if (checkElectronic == 1) {
           checkElectronic = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Electronic" + `</div>`;
        }
        else {checkElectronic = ""}
        if (checkJazz == 1) {
           checkJazz = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Jazz" + `</div>`;
        }
        else {checkJazz = ""}
        if (checkFolk == 1) {
           checkFolk = `<div style="font-size: 12px; 
           width: 75px;
           background-color: purple;
           border: 1px solid gold;
           " 
           class="MovieTag">` + "Folk" + `</div>`;
        }
        else {checkFolk = ""}
        return checkPop +
        checkCountry +
        checkRock +
        checkMetal +
        checkRap +
        checkElectronic +
        checkJazz +
        checkFolk
    }
	/**
	 * Formats the action column for each row of data
	 **/
	function table_row_edit(value, row, index) {
		return `
		<a href="../prod/updatesong/${row.song_uuid}">
			<i class="fa fa-edit"></i>
		</a>

		<a href="../prod/deletesong/${row.song_uuid}">
			<i class="fa fa-trash"></i>
		</a>
		`;
	}

